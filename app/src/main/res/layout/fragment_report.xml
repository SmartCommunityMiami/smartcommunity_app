<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    tools:context="edu.miami.c11173414.smartcommunitydrawer.ReportFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textSize="35sp"
        android:text="Submit a Report"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/upload_existing_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to upload an existing picture."/>

    <ImageView
        android:contentDescription="camera"
        android:id="@+id/report_photo"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:src="@drawable/ic_menu_camera"/>

    <TextView
        android:id="@+id/take_new_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:text="Click here to take a new picture."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Classify the issue"/>
    <Spinner
        android:id="@+id/classification_spinner1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:entries="@array/classifications_array"/>
    <Spinner
        android:clickable="false"
        android:id="@+id/classification_spinner2"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5" />
    <Spinner
        android:clickable="false"
        android:id="@+id/classification_spinner3"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5" />

    <EditText
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:hint="Enter a short description of the issue"/>
    <Button
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit report"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How should I classify my report?"/>

</LinearLayout>
